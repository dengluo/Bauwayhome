<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_divider_line"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:background="@color/blue_ice"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/product_show"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ezy.ui.view.BannerView
                android:id="@+id/banner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:bvAspectRatio="0.6666666"
                app:bvIndicatorColor="#cccccc"
                app:bvIndicatorColorSelected="@color/colorAccent"
                app:bvIsLoop="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_tab_bar"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_circle_huise"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_pro1"
                    style="@style/tab_menu_item1"
                    android:text="@string/tab_menu_pro1" />

                <RadioButton
                    android:id="@+id/rb_pro2"
                    style="@style/tab_menu_item2"
                    android:text="@string/tab_menu_pro2" />

                <RadioButton
                    android:id="@+id/rb_pro3"
                    style="@style/tab_menu_item2"
                    android:text="@string/tab_menu_pro3" />

                <RadioButton
                    android:id="@+id/rb_pro4"
                    style="@style/tab_menu_item3"
                    android:text="@string/tab_menu_pro4" />

            </RadioGroup>

            <!--<View-->
            <!--android:id="@+id/div_tab_bar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2px"-->
            <!--android:layout_above="@id/rg_tab_bar"-->
            <!--android:background="@color/div_white" />-->

            <android.support.v4.view.ViewPager
                android:id="@+id/vpager"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/rg_tab_bar"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/blue_ice" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>