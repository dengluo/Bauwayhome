<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_divider_line"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:background="@color/blue_ice"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_radio_return"
            android:gravity="left|center_vertical"
            android:padding="@dimen/dp5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/home_product_iqos"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--查看设备指数-->
            <LinearLayout
                android:id="@+id/ll_view_device_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/shape_circle_huise"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_device_parameter" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_device_index"
                        android:textColor="@color/text_color_2"
                        android:textSize="14dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_view_device_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/icon_jiantou_gray" />
                </RelativeLayout>
            </LinearLayout>

            <!--第二节-->
            <LinearLayout
                android:id="@+id/ll_view_device_index_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:text="@string/loop_time"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_loop_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/dp10"
                            android:text="300"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/dp10"
                            android:text=" S"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:text="@string/dcv"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_dcv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/dp10"
                            android:text="4.12"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/dp10"
                            android:text=" V"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:text="@string/power_count"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_charge_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/dp10"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/dp10"
                            android:text=" T"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:text="@string/power_time"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_charge_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:text="11:16 - 11:32"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:text="@string/temp"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/dp10"
                            android:text="193"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/dp10"
                            android:text=" ℃"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp10"
                            android:text="@string/user_use_number"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_weight="2"
                        android:background="@drawable/shape_circle_blue"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_use_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/dp10"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/dp10"
                            android:text=" P"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!--设定设备指数-->
            <LinearLayout
                android:id="@+id/ll_set_device_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_circle_huise"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/set_device_parameter" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/set_device_index"
                        android:textColor="@color/text_color_2"
                        android:textSize="14dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_set_device_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/icon_jiantou_gray" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_set_device_index_context"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    style="@style/set_ll"
                    android:layout_marginTop="@dimen/dp10">

                    <LinearLayout style="@style/set_ll_1">

                        <LinearLayout style="@style/set_ll_2">

                            <TextView
                                android:id="@+id/bt_off"
                                style="@style/set_bt"
                                android:text="@string/off" />

                            <RelativeLayout
                                style="@style/set_base_center_view"
                                android:layout_gravity="center">

                                <android.support.v7.widget.SwitchCompat
                                    android:id="@+id/bt_switch_shake"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:padding="3dp"
                                    android:switchMinWidth="20dp"
                                    android:textOff=""
                                    android:textOn="" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/bt_on"
                                style="@style/set_bt"
                                android:text="@string/on" />
                        </LinearLayout>

                        <TextView
                            style="@style/every_day_use_number"
                            android:text="@string/vibration" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/set_ll_1"
                        android:visibility="gone">

                        <LinearLayout style="@style/set_ll_2">

                            <ImageButton
                                android:id="@+id/bt_user_number_subtract"
                                style="@style/set_bt"
                                app:srcCompat="@drawable/vector_drawable_minus" />

                            <EditText
                                android:id="@+id/et_set_use_number"
                                style="@style/set_et"
                                android:text="300" />

                            <ImageButton
                                android:id="@+id/bt_user_number_add"
                                style="@style/set_bt"
                                app:srcCompat="@drawable/vector_drawable_plus" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView4"
                            style="@style/every_day_use_number"
                            android:text="@string/every_day_use_num_plan" />
                    </LinearLayout>

                    <LinearLayout style="@style/set_ll_3">

                        <LinearLayout style="@style/set_ll_2">

                            <ImageButton
                                android:id="@+id/bt_loop_number_subtract"
                                style="@style/set_bt"
                                app:srcCompat="@drawable/vector_drawable_minus" />

                            <EditText
                                android:id="@+id/et_set_loop_number_plan"
                                style="@style/set_et"
                                android:text="15" />

                            <ImageButton
                                android:id="@+id/bt_loop_number_add"
                                style="@style/set_bt"
                                app:srcCompat="@drawable/vector_drawable_plus" />
                        </LinearLayout>

                        <TextView
                            style="@style/every_day_use_number"
                            android:text="@string/loop_use_num_plan" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/set_ll"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10">

                    <LinearLayout style="@style/set_ll_1">

                        <LinearLayout style="@style/set_ll_2">

                            <ImageButton
                                android:id="@+id/bt_temp_subtract"
                                style="@style/set_bt"
                                app:srcCompat="@drawable/vector_drawable_minus" />

                            <EditText
                                android:id="@+id/et_temp"
                                style="@style/set_et"
                                android:text="225" />

                            <ImageButton
                                android:id="@+id/bt_temp_add"
                                style="@style/set_bt"
                                app:srcCompat="@drawable/vector_drawable_plus" />
                        </LinearLayout>

                        <TextView
                            style="@style/every_day_use_number"
                            android:text="@string/temp_set" />
                    </LinearLayout>

                    <LinearLayout style="@style/set_ll_3">

                        <LinearLayout style="@style/set_ll_2">

                            <ImageButton
                                android:id="@+id/bt_time_subtract"
                                style="@style/set_bt"
                                app:srcCompat="@drawable/vector_drawable_minus" />

                            <EditText
                                android:id="@+id/et_time"
                                style="@style/set_et"
                                android:text="5" />

                            <ImageButton
                                android:id="@+id/bt_time_add"
                                style="@style/set_bt"
                                app:srcCompat="@drawable/vector_drawable_plus" />
                        </LinearLayout>

                        <TextView
                            style="@style/every_day_use_number"
                            android:text="@string/work_time_set" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/set_ll"
                    android:visibility="gone">

                    <LinearLayout style="@style/set_ll_1">

                        <LinearLayout style="@style/set_ll_2">

                            <EditText
                                android:id="@+id/et_price"
                                style="@style/set_et"
                                android:layout_width="160dp"
                                android:text="10" />
                        </LinearLayout>

                        <TextView
                            style="@style/every_day_use_number"
                            android:text="@string/smoke_price" />
                    </LinearLayout>

                    <LinearLayout style="@style/set_ll_3">

                        <RelativeLayout style="@style/set_ll_2">

                            <Spinner
                                android:id="@+id/spinner_money_select"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:backgroundTint="@color/white_1"
                                android:dropDownHorizontalOffset="40dp"
                                android:dropDownVerticalOffset="30dp"
                                android:popupBackground="@color/blue_1"></Spinner>
                        </RelativeLayout>

                        <TextView
                            style="@style/every_day_use_number"
                            android:text="@string/money_type" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--解绑设备-->
            <LinearLayout
                android:id="@+id/ll_unbind_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_circle_huise"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/connect_device" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_device_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unbind_device"
                        android:textColor="@color/text_color_2"
                        android:textSize="14dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/icon_jiantou_gray" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
