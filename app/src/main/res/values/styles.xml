<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryDark">@color/black_1</item>
        <item name="colorAccent">@color/blue_1</item>
        <item name="colorControlActivated">@color/blue_3</item>
        <item name="colorSwitchThumbNormal">@color/black_2</item>
    </style>

    <style name="Default_font_size_10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Default_font_size_12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Default_font_size_16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Default_font_size_14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Default_font_size_18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Default_font_size_20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Default_font_size_24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Default_font_size_30">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_1</item>
    </style>

    <style name="login_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingStart">40dp</item>
    </style>

    <style name="login_item_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_ll_two">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cancelBtShadow" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="bt_style" parent="cancelBtShadow">
        <item name="android:background">@drawable/selector_bt</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="main_middle_bt" parent="bt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_bt</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="register_ll_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="launch_app_theme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/black_1</item>
    </style>

    <style name="tab_menu_item1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@drawable/tab_menu_bg1</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tab_menu_item2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@drawable/tab_menu_bg2</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tab_menu_item3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@drawable/tab_menu_bg3</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
